{
  "name": "Catalog",
  "description": "This app does one little thing, and does it well.",
  "keywords": [
    "Self-containd System"
  ],
  "website": "https://scsa-app-catalogue.herokuapp.com/",
  "repository": "https://github.com/guddii/scsa-app-sales",
  "success_url": "/",
  "env": {
    "MODE": {
      "description": "Selects the mode within the configuration.",
      "generator": "prod"
    },
    "NODE_MODULES_CACHE": {
      "description": "Caching of node modules.",
      "value": false
    },
    "PROJECT_PATH": {
      "description": "The path to frontend artifacts.",
      "value": "frontend/"
    }
  },
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "https://github.com/timanovsky/subdir-heroku-buildpack"
    }
  ]
}
